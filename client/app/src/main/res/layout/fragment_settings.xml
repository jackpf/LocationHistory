<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/lineSpine"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:alpha="0.5"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/link1"
            app:layout_constraintBottom_toBottomOf="@id/pushDesc" />

        <View
            android:id="@+id/link1"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:background="?attr/colorPrimary"
            android:alpha="0.5"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@id/lineSpine"
            app:layout_constraintEnd_toStartOf="@id/serverHostInputLayout"
            app:layout_constraintTop_toTopOf="@id/serverHostInputLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serverHostInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/server_host"
            app:helperText="@string/server_host_hint"
            app:layout_constraintStart_toEndOf="@id/link1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/serverHostInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/link2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?attr/colorPrimary"
            android:alpha="0.5"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@id/link1"
            app:layout_constraintEnd_toEndOf="@id/link1"
            app:layout_constraintTop_toTopOf="@id/serverPortInputLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serverPortInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/server_port"
            app:helperText="@string/server_port_hint"
            app:layout_constraintStart_toStartOf="@id/serverHostInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serverHostInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/serverPortInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?attr/colorPrimary"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="@id/link1"
            app:layout_constraintEnd_toEndOf="@id/link1"
            app:layout_constraintTop_toTopOf="@id/testButton"
            app:layout_constraintBottom_toBottomOf="@id/testButton" />

        <Button
            android:id="@+id/testButton"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/test"
            app:layout_constraintStart_toStartOf="@id/serverPortInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serverPortInputLayout" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?attr/colorPrimary"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="@id/link1"
            app:layout_constraintEnd_toEndOf="@id/link1"
            app:layout_constraintTop_toTopOf="@id/saveButton"
            app:layout_constraintBottom_toBottomOf="@id/saveButton" />

        <Button
            android:id="@+id/saveButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/save"
            app:layout_constraintStart_toStartOf="@id/testButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@id/saveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saveButton" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/pushRegisterSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/enable_unified_push"
            app:layout_constraintStart_toStartOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/pushDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/unified_push_description"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textStyle="italic"
            android:alpha="0.7"
            app:layout_constraintStart_toStartOf="@id/pushRegisterSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pushRegisterSwitch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>