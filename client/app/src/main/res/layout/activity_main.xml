<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingVertical="64dp"
    android:paddingHorizontal="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="center"
        android:letterSpacing="0.05"
        android:layout_marginBottom="24dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/permissions_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.jackpf.locationhistory.client.ui.PermissionsWarningFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/settings_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.jackpf.locationhistory.client.ui.SettingsFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/status_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.jackpf.locationhistory.client.ui.StatusFragment" />
</LinearLayout>